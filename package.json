{
  "name": "pedro-pathing-visualizer",
  "private": true,
  "version": "1.1.7",
  "main": "electron/main.js",
  "author": "Matthew Allen <allenmc220@gmail.com>",
  "email": "allenmc220@gmail.com",
  "license": "MIT",
  "description": "A better alternative to pedro pathing visualizer",
  "type": "module",
  "scripts": {
    "version:bump": "node scripts/bump-version.js",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json && tsc -p tsconfig.node.json",
    "electron:dev": "npm run format && npm run build && electron .",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder --mac --arm64 --publish=never",
    "dist:unsigned": "npm run build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --arm64 --publish=never",
    "dist:all": "npm run build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --win --linux --publish=never",
    "dist:publish": "node scripts/publish.js",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@tsconfig/svelte": "^5.0.4",
    "autoprefixer": "^10.4.20",
    "cli-progress": "^3.12.0",
    "electron": "^39.2.3",
    "electron-builder": "^24.9.1",
    "electron-installer-dmg": "^5.0.1",
    "hotkeys-js": "^3.13.9",
    "postcss": "^8.4.41",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^4.2.19",
    "svelte-check": "^3.8.5",
    "tailwindcss": "^3.4.9",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3",
    "vite": "^5.4.14"
  },
  "dependencies": {
    "@types/d3": "^7.4.3",
    "@types/lodash": "^4.17.7",
    "d3": "^7.9.0",
    "electron-updater": "^6.6.2",
    "express": "^4.18.2",
    "get-port": "^7.0.0",
    "hotkeys-js": "^3.13.9",
    "lodash": "^4.17.21",
    "prettier-plugin-java": "^2.6.4",
    "sass": "^1.77.8",
    "svelte-copy": "^1.4.2",
    "svelte-dnd-action": "^0.9.67",
    "svelte-highlight": "^7.7.0",
    "two.js": "^0.8.14",
    "update-electron-app": "^3.1.1"
  },
  "build": {
    "appId": "com.pedropathing.visualizer",
    "productName": "Pedro Pathing Visualizer",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      "public/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.png",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "asar": true,
      "asarUnpack": [
        "node_modules/electron-updater"
      ]
    },
    "dmg": {
      "icon": "build/icon.png",
      "background": "build/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Development",
      "maintainer": "Matthew Allen <allenmc220@gmail.com>"
    },
    "publish": {
      "provider": "github",
      "owner": "Mallen220",
      "repo": "PedroPathingVisualizer"
    }
  }
}